{
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"codeFrame": true
	},
	"extends": ["airbnb", "prettier"],
	"plugins": ["prettier", "angular"],
	"rules": {
		"prettier/prettier": ["error"],
		"semi": [2, "never"],
		"import/no-extraneous-dependencies": 0
	},
	"env": {
		"jest": true,
		"es6": true
	}
}
